<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    android:orientation="vertical">

    <!--Switch
        android:id="@+id/switcher"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_gravity="right"
        android:gravity="center" /-->

    <ImageView
        android:id="@+id/titleImage"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        app:srcCompat="@drawable/puzzle_no_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:onClick="clickOnButton0"
            android:text="1"
            android:textSize="18dp"
            style="@style/BUTTON"/>

        <Button
            android:id="@+id/num1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:onClick="clickOnButton1"
            android:text="2"
            android:textSize="18dp"
            style="@style/BUTTON"/>

        <Button
            android:id="@+id/num2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:foregroundGravity="center_horizontal"
            android:gravity="center"
            android:onClick="clickOnButton2"
            android:text="3"
            android:textSize="18dp"
            style="@style/BUTTON"/>

        <Button
            android:id="@+id/num3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:gravity="center|center_horizontal"
            android:onClick="clickOnButton3"
            android:text="4"
            android:textSize="18dp"
            style="@style/BUTTON"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:onClick="clickOnButton4"
            android:text="5"
            android:textSize="18dp"
            style="@style/BUTTON"/>

        <Button
            android:id="@+id/num5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:onClick="clickOnButton5"
            android:text="6"
            android:textSize="18dp"
            style="@style/BUTTON"/>

        <Button
            android:id="@+id/num6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:foregroundGravity="center_horizontal"
            android:gravity="center"
            android:onClick="clickOnButton6"
            android:text="7"
            android:textSize="18dp"
            style="@style/BUTTON"/>

        <Button
            android:id="@+id/num7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:gravity="center|center_horizontal"
            android:onClick="clickOnButton7"
            android:text="8"
            android:textSize="18dp"
            style="@style/BUTTON"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:onClick="clickOnButton8"
            android:text="9"
            android:textSize="18dp"
            style="@style/BUTTON"/>

        <Button
            android:id="@+id/num9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:onClick="clickOnButton9"
            android:text="10"
            android:textSize="18dp"
            style="@style/BUTTON"/>

        <Button
            android:id="@+id/num10"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:foregroundGravity="center_horizontal"
            android:gravity="center"
            android:onClick="clickOnButton10"
            android:text="11"
            android:textSize="18dp"
            style="@style/BUTTON"/>

        <Button
            android:id="@+id/num11"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:gravity="center|center_horizontal"
            android:onClick="clickOnButton11"
            android:text="12"
            android:textSize="18dp"
            style="@style/BUTTON"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num12"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:onClick="clickOnButton12"
            android:text="13"
            android:textSize="18dp"
            style="@style/BUTTON"/>

        <Button
            android:id="@+id/num13"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:onClick="clickOnButton13"
            android:text="14"
            android:textSize="18dp"
            style="@style/BUTTON"/>

        <Button
            android:id="@+id/num14"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:onClick="clickOnButton14"
            android:text="15"
            android:textSize="18dp"
            style="@style/BUTTON"/>

        <Button
            android:id="@+id/num15"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="0"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:onClick="clickOnButton15"
            android:textSize="18dp"
            style="@style/BUTTON"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/moves_text"
            style="@style/TEXT"
            android:layout_width="197dp"
            android:layout_height="69dp"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:text="Moves: "
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="#07B818"
            android:onClick="clickOnBack"
            android:text="Back"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            />

    </LinearLayout>

    <Button
        android:id="@+id/start_button"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#07B818"
        android:insetTop="10dp"
        android:onClick="clickOnStart"
        android:text="Start"
        android:textSize="20dp"
        android:textStyle="bold" />


    <CheckBox
        android:id="@+id/test_checkBox"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:text="Test"
        android:textColor="#020873"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>

